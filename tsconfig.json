{
  "compilerOptions": {
    "allowJs": false,
    "declaration": false,
    "strictPropertyInitialization": false,
    // "suppressImplicitAnyIndexErrors": true,
    "baseUrl": ".",
     "outDir": "./dist",

    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "noImplicitAny": false,
    "importHelpers": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "paths": {
      "/@/*": ["./src/*"]
    }
  },
  "exclude": [
    "./node_modules"
  ],
  "include": [
    "./src/**/*.ts",
    "./src/**/*.vue",
  ],
}